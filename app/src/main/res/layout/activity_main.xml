<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <Button
            android:id="@+id/btn_chuc_nang"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/ic_menu_black_24dp" />

        <TextView
        android:id="@+id/tv_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/btn_chuc_nang"
        android:layout_toRightOf="@id/btn_chuc_nang"
        android:layout_alignBottom="@id/btn_chuc_nang"
        android:gravity="center_vertical"
        android:text="Currency"
        android:layout_marginLeft="20dp"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tv_donvi1"
        android:text="$"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_alignBottom="@id/tvResult"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_chuc_nang"/>
    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"
        android:layout_toRightOf="@id/tv_donvi1"
        android:layout_below="@id/btn_chuc_nang"
        android:gravity="center_vertical|left"

        />
    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="200dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_donvi1"/>
    <TextView
        android:id="@+id/tv_donvi2"
        android:text="Ä‘"
        android:textSize="20sp"

        android:layout_width="wrap_content"
        android:layout_alignBottom="@id/tvResult2"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner1"/>
    <TextView
        android:id="@+id/tvResult2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"
        android:layout_toRightOf="@id/tv_donvi1"
        android:layout_below="@id/spinner1"
        android:gravity="center_vertical|left"
        />
    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="200dp"

        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_donvi2"/>
    <TextView
        android:id="@+id/tv_quy_doi"
        android:text="1 USD = 23,550.00 VND"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner2"/>
    <TextView
        android:id="@+id/tv_updated_last"
        android:text="Updated 4/16/2020 6h45 AM"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_quy_doi"/>
    <Button
        android:id="@+id/btn_update_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update rates"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/tv_updated_last"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

    <Button
        android:id="@+id/dauCham"
        android:text="."
        android:layout_marginRight="20px"
        android:layout_width="330px"
        android:layout_height="150px"
        android:textSize="70px"
        android:layout_alignParentRight='true'
        android:layout_below="@id/So3"/>
    <Button
        android:id="@+id/So0"
        android:text="0"
        android:layout_width="330px"
        android:layout_height="wrap_content"
        android:layout_marginRight="20px"
        android:textSize="70px"
        android:layout_toLeftOf='@id/dauCham'
        android:layout_alignBottom='@id/dauCham'
        android:layout_alignTop='@id/dauCham'/>

    <Button
        android:id="@+id/So3"
        android:text="3"
        android:layout_width="wrap_content"
        android:layout_height="150px"
        android:layout_marginRight="20px"
        android:layout_alignRight="@id/dauCham"
        android:layout_alignLeft="@id/dauCham"
        android:textSize="70px"
        android:layout_alignParentRight='true'
        android:layout_below="@id/So6"
        />
    <Button
        android:id="@+id/So2"
        android:text="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="70px"
        android:layout_toLeftOf='@id/So3'
        android:layout_alignBottom='@id/So3'
        android:layout_alignTop='@id/So3'
        android:layout_alignRight="@id/So0"
        android:layout_alignLeft="@id/So0"/>
    <Button
        android:id="@+id/So1"
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:textSize="70px"
        android:layout_toLeftOf='@id/So2'
        android:layout_alignTop='@id/So2'
        android:layout_alignBottom="@id/So2"
        android:layout_alignParentLeft='true'/>

    <Button
        android:id="@+id/So6"
        android:text="6"
        android:layout_width="wrap_content"
        android:layout_height="150px"
        android:layout_marginRight="20px"
        android:layout_alignRight="@id/So3"
        android:layout_alignLeft="@id/So3"
        android:textSize="70px"
        android:layout_alignParentRight='true'
        android:layout_below="@id/So9"/>
    <Button
        android:id="@+id/So5"
        android:text="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="70px"
        android:layout_toLeftOf='@id/So6'
        android:layout_alignBottom='@id/So6'
        android:layout_alignTop='@id/So6'
        android:layout_alignRight="@id/So2"
        android:layout_alignLeft="@id/So2"
        />
    <Button
        android:id="@+id/So4"
        android:text="4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:textSize="70px"
        android:layout_toLeftOf='@id/So5'
        android:layout_alignTop='@id/So5'
        android:layout_alignBottom="@id/So5"
        android:layout_alignParentLeft='true'/>

    <Button
        android:id="@+id/So9"
        android:text="9"
        android:layout_width="wrap_content"
        android:layout_height="150px"
        android:layout_marginRight="20px"
        android:layout_alignRight="@id/So6"
        android:layout_alignLeft="@id/So6"
        android:textSize="70px"
        android:layout_alignParentRight='true'
        android:layout_below="@id/nutBS"/>
    <Button
        android:id="@+id/So8"
        android:text="8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="70px"
        android:layout_toLeftOf='@id/So9'
        android:layout_alignBottom='@id/So9'
        android:layout_alignTop='@id/So9'
        android:layout_alignRight="@id/So5"
        android:layout_alignLeft="@id/So5"/>
    <Button
        android:id="@+id/So7"
        android:text="7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:textSize="70px"
        android:layout_toLeftOf='@id/So8'
        android:layout_alignTop='@id/So8'
        android:layout_alignBottom="@id/So8"
        android:layout_alignParentLeft='true'/>

    <Button
        android:id="@+id/nutBS"
        android:layout_width="330px"
        android:layout_height="150px"
        android:layout_marginRight="20px"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:textSize="70px"
        android:background="@drawable/ic_launcher"/>
    <Button
        android:id="@+id/nutCE"
        android:text="CE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="70px"
        android:layout_toLeftOf='@id/So9'
        android:layout_alignBottom='@id/nutBS'
        android:layout_alignTop='@id/nutBS'
        android:layout_alignRight="@id/So8"
        android:layout_alignLeft="@id/So8"
        />
    </RelativeLayout>
    
</LinearLayout>
</ScrollView>